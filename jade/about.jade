block header
	header.header.header--about
		.header-container
			a(href="#").header-logo
				img(src="img/about-page/logo-about.svg", alt="alt")


			.header-right

				ul.about-nav
					- for (var i=1; i < 5; i++)
						if i == 1
							li.active
								a(href="#")= i
						else
							li
								a(href="#")= i
				
				.header-search
					include _misc/search-standart

